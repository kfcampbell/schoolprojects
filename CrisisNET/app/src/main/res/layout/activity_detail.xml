<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="keegancampbell.tentativefinal.DetailActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title goes here"
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:id="@+id/scrollView"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/mapsButton">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Specific details about crisis and Google Play Services (to make use of the Maps) API go here."
            android:id="@+id/summary"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />
    </ScrollView>

    <ImageView
        android:layout_width="350dp"
        android:layout_height="225dp"
        android:id="@+id/webImage"
        android:layout_gravity="center"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_below="@+id/title"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/webButton" />

    <Button
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:text="View Story Online"
        android:id="@+id/webButton"
        android:layout_above="@+id/scrollView"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:text="View in Maps"
        android:id="@+id/mapsButton"
        android:layout_alignTop="@+id/webButton"
        android:layout_toEndOf="@+id/webButton" />


</RelativeLayout>
